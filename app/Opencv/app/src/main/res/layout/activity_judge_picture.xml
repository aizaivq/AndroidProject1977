<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.via.opencv.judge.JudgePictureActivity">

    <NumberPicker
        android:id="@+id/mNumberPickerAdjustWH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/mTextViewFocusCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@+id/mNumberPickerAdjustSplitWidth"
                android:text="TextView" />

    <ImageView
        android:id="@+id/mImageViewPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/mNumberPickerAdjustWH"
        android:layout_toRightOf="@+id/mNumberPickerAdjustWH"

        />

    <NumberPicker
        android:id="@+id/mNumberPickerAdjustSplitWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mNumberPickerAdjustWH" />


</RelativeLayout>
